<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<typeAliases>
		<typeAlias type="model.Board" alias="board"/>
		<typeAlias type="model.Management" alias="management"/>
	</typeAliases>
	
	<environments default="board">
		<environment id="board">
			<transactionManager type="JDBC"></transactionManager>
			<dataSource type="UNPOOLED">
				<property name="driver" value="com.mysql.jdbc.Driver"/>
				<property name="url" value="jdbc:mysql://localhost/wawa_db"/>
				<property name="username" value="root"/>
				<property name="password" value="mysql"/>
			</dataSource>
		</environment>
	</environments>
	
	<mappers>
		<mapper resource="mapper/boardMapper.xml"/>
		<mapper resource="mapper/managementMapper.xml"/>
	</mappers>
</configuration>