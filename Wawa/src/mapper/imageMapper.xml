<?xml version="1.0" encoding="UTF-8"?>
<mapper namespace="image">
	<insert id="insert" parameterType="Image">
		insert into image values(0, #{board_idx} #{physical_name}, 
		#{name}, #{path})
	</insert>	
	<update id="update" parameterType="Image">
		update image set physical_name=#{physical_name},
		name=#{name}, path=#{path} where img_idx=#{img_idx}
	</update>
	<delete>
		delete from image where img_idx=#{img_idx}
	</delete>
	<select id="selectOne" parameterType="int" resultType="Image">
		select * from image where img_idx=#{img_idx}
	</select>
	<select id="selectAll" resultType="Image">
		select * from image
	</select>
</mapper>