<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="interface_dao.IManagementDao">
	<insert id="insertManagement" parameterType="java.util.HashMap">
		insert into management values(0,#{idx},#{date},#{weight})
	</insert>
	<update id="updateManagement" parameterType="java.util.HashMap">
		update management set date=#{date}, weight=#{weight} where managementIdx=#{managementIdx} 
	</update>	
	<delete id="deleteManagement" parameterType="int">
		delete from management where managementIdx=#{managementIdx}
	</delete>
	<select id="selectOne" parameterType="int" resultType="java.util.HashMap">
		select * from management where managementIdx=#{managementIdx}
	</select>
	<select id="selectList" parameterType="int" resultType="java.util.HashMap">
		select * from management where idx=#{idx} order by date asc
	</select>
	
</mapper>
