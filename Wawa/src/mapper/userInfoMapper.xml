<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="interface_dao.IUserInfoDao">
	<insert id="insertUserInfo" parameterType="java.util.HashMap">
		insert into userinfo values(0,#{id},#{password},#{nickname},#{sex},#{phoneNum},#{admin_check},#{email})
	</insert>
	<delete id="deleteUserInfo" parameterType="String">
		delete from userinfo where id=#{id}
	</delete>
	<update id="updateUserInfo" parameterType="java.util.HashMap">
		update userinfo set #{password},#{nickname},#{sex},#{phoneNum},#{admin_check},#{email} where id=#{id}
	</update>
	<select id="selectOneUserInfo" parameterType="String" resultType="java.util.HashMap">
		select * from userinfo where id=#{id}
	</select>
	<select id="selectAllUserInfo" resultType="java.util.HashMap">
		select * from userinfo
	</select>
</mapper>